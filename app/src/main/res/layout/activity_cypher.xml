<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cypher"
    android:background="@color/valo_black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="590dp"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cypher_background"
                android:alpha="0.5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/valorant_font"
                android:text="CYPHER"

                android:textColor="@color/white"
                android:textSize="42dp" />

            <ImageView
                android:layout_width="251dp"
                android:layout_height="332dp"
                android:layout_alignParentBottom="true"

                android:layout_marginLeft="-30dp"

                android:layout_marginBottom="19dp"
                android:src="@drawable/cypher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="// BIOGRAPHY"
                android:textSize="24dp"
                android:fontFamily="@font/valorant_font"
                android:textColor="#B0B0AF"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="\nThe Moroccan information broker, Cypher is a one-man surveillance network who keeps tabs on the enemy's every move. No secret is safe. No maneuver goes unseen. Cypher is always watching."
            android:fontFamily="@font/valorant_font"
            android:textColor="#B0B0AF"
            android:textSize="16dp"
            android:lineSpacingExtra="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE MAP"
            android:textSize="40sp"
            android:fontFamily="@font/valorant_font"
            android:textColor="@color/valo_red"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/ascent"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="190dp"

                android:background="@drawable/ascent"
                android:padding="50dp"
                android:alpha="0.8"
                android:layout_marginTop="30dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASCENT"
                    android:fontFamily="@font/valorant_font"
                    android:textColor="#FFFFFF"
                    android:alpha="1"
                    android:textSize="50dp"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/haven"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="190dp"

                android:background="@drawable/haven"
                android:padding="50dp"
                android:alpha="0.8"
                android:layout_marginTop="30dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HAVEN"
                    android:fontFamily="@font/valorant_font"
                    android:textColor="#FFFFFF"
                    android:alpha="1"
                    android:textSize="50dp"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/bind"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="190dp"

                android:background="@drawable/split"
                android:padding="50dp"
                android:alpha="0.8"
                android:layout_marginTop="30dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPLIT"
                    android:fontFamily="@font/valorant_font"
                    android:textColor="#FFFFFF"
                    android:alpha="1"
                    android:textSize="50dp"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/split"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="190dp"

                android:background="@drawable/bind"
                android:padding="50dp"
                android:alpha="0.8"
                android:layout_marginTop="30dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIND"
                    android:fontFamily="@font/valorant_font"
                    android:textColor="#FFFFFF"
                    android:alpha="1"
                    android:textSize="50dp"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>
</ScrollView>